{
  "name": "vscode-ahk-debug",
  "version": "0.9.0",
  "description": "Supports AutoHotkey v1 and v2 debugging",
  "author": "zero-plusplus <git@zero-plusplus.com>",
  "license": "MIT",
  "main": "./dist/src/extension",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zero-plusplus/vscode-ahk-debug.git"
  },
  "bugs": {
    "url": "https://github.com/zero-plusplus/vscode-ahk-debug/issues"
  },
  "scripts": {
    "lint": "eslint --fix ./src/**/*.ts ./test/**/*.ts",
    "clean": "rimraf dist",
    "build": "yarn clean && yarn lint && tsc",
    "watch": "yarn build && onchange ./src/**/*.ts ./test/**/*.ts -- yarn build",
    "test": "yarn lint && mocha",
    "vscode:prepublish": "yarn build"
  },
  "watch": {
    "build": {
      "pattern": [
        "src",
        "test"
      ]
    }
  },
  "publisher": "zero-plusplus",
  "engines": {
    "vscode": "^1.44.0"
  },
  "activationEvents": [
    "onDebug",
    "onLanguage:ahk",
    "onLanguage:ahk2",
    "onLanguage:ah2"
  ],
  "contributes": {
    "breakpoints": [
      {
        "language": "ahk"
      },
      {
        "language": "ahk2"
      },
      {
        "language": "ah2"
      }
    ],
    "commands": [
      {
        "command": "vscode-ahk-debug.helloworld",
        "title": "Hello World!!!!!!!!!!!!"
      }
    ],
    "debuggers": [
      {
        "type": "ahk",
        "label": "AutoHotkey",
        "languages": [
          "ahk",
          "ahk2",
          "ah2"
        ],
        "program": "./dist/src/dap/debugAdapter.js",
        "runtime": "node",
        "configurationAttributes": {
          "launch": {
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "Absolute path to a (ahk | ahk2 | ah2) file.",
                "default": "${file}"
              },
              "runtime": {
                "type": "string",
                "description": "Full path of Autohotkey.exe"
              },
              "hostname": {
                "type": "string",
                "description": "",
                "default": "127.0.0.1"
              },
              "port": {
                "type": "number",
                "description": "127.0.0.1",
                "default": 9000
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop after launch.",
                "default": false
              }
            }
          }
        },
        "configurationSnippets": [
          {
            "label": "AutoHotkey Debug",
            "description": "A new configuration for 'debugging' a user selected (ahk | ahk2 | ah2) file.",
            "body": {
              "type": "ahk",
              "request": "launch",
              "name": "AutoHotkey Debug",
              "program": "^\"\\${file}\"",
              "stopOnEntry": false
            }
          }
        ]
      }
    ]
  },
  "devDependencies": {
    "@types/dom-parser": "^0.1.0",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.13.2",
    "@types/underscore": "^1.9.4",
    "@types/vscode": "^1.44.0",
    "@types/xml-parser": "^1.2.29",
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "@zero-plusplus/eslint-my-rules": "^1.0.15",
    "dom-parser": "^0.1.6",
    "eslint": "^6.8.0",
    "mocha": "^7.1.1",
    "onchange": "^6.1.1",
    "ts-node": "^8.9.0",
    "typescript": "^3.8.3",
    "underscore": "^1.10.2",
    "vsce": "^1.75.0",
    "vscode-debugadapter": "^1.40.0",
    "vscode-debugadapter-testsupport": "^1.40.3",
    "vscode-debugprotocol": "^1.40.0",
    "xml-parser": "^1.2.1"
  }
}
